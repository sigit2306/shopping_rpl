
<h3 class="text-center text-muted">{{title}}</h3>

<form action="/user/complaint" method="post">
	<div class="form-group">
		<label for="kodePembayaran">Kode Pembayaran:</label>
		<input type="text" disabled value="Kode Pembayaran" id="kodePembayaran" name="kodePembayaran" class="form-control">
	</div>
	<div class="form-group">
		<label for="penerima">Penerima:</label>
		<input type="text" disabled value="Penerima" id="penerima" name="penerima" class="form-control">
	</div>
	<div class="form-group">
		<label for="totalBayar">Total Bayar</label>
		<input type="text" disabled value="Total Bayar" id="totalBayar" name="totalBayar" class="form-control" >
	</div>
	<div class="form-group">
		<label for="pesanPengaduan">Pesan Pengaduan</label>
		<textarea class="form-control" rows="5" id="pesanPengaduan" class="form-control" placeholder="Silahkan sampaikan pengaduan Anda disini."></textarea>
	</div>
	<input type="hidden" name="_csrf" value="{{ csrfToken }}">
	<button type="submit" class="btn btn-primary">Kirim Pengaduan</button>
</form>
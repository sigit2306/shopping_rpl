<div class="row">
	<div class="col">
		<h1 class="text-center text-muted">Masuk ke Akun</h1>
		{{#if hasErrors}}
			<div class="alert alert-danger">
				{{# each messages}}
					<p>{{this}}</p>
				{{/each}}
			</div>
		{{/if}}
		<form action="/user/signin" method="post">
			<div class="form-group">
				<label for="email">E-mail</label>
				<input type="text" id="email" name="email" class="form-control" placeholder="E-mail Anda">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" class="form-control" placeholder="Password Anda">
			</div>
			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			<button type="submit" class="btn btn-primary">Masuk</button>
		</form>
		<p>Belum punya Akun? Silahkan <a href="/user/signup"><strong class="text-success">Daftar di sini</strong></a></p>
	</div>
</div>